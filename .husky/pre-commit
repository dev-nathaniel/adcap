#!/usr/bin/env bash
set -e

# Current branch name
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

# Regex rules
BRANCH_REGEX='^[A-Z0-9]+-[0-9]+-[a-z0-9._-]+$'

# echo "ğŸ” Checking branch name..."
if ! [[ "$BRANCH_NAME" =~ $BRANCH_REGEX ]]; then
  echo "âŒ Invalid branch name: $BRANCH_NAME"
  echo "ğŸ‘‰ Must match: ABC-123-some-description (prefix can be uppercase alphanumeric)"
  exit 1
fi
# echo "âœ… Branch name OK: $BRANCH_NAME"
